%a.brand{:href => '/'}
  = image_tag 'logo.png', :width => 60
= link_to "Spinmap", root_path, :class => 'brand'
%ul.nav.pull-right
  - if user_signed_in?
    %li
      = link_to current_user.uid, "http://www.ravelry.com/people/#{current_user.uid}"
    %li
      = link_to 'Logout', signout_path
  - else
    %li
      = link_to 'Login Through Ravelry', signin_path
