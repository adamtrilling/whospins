source 'https://rubygems.org'

# framework
gem 'rails', '4.0.0.beta1'

# database
gem 'pg'

# front end
group :assets do
  gem 'sass-rails',   '~> 4.0.0.beta1'
  gem 'coffee-rails', '~> 4.0.0.beta1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'ember-rails'
gem 'haml'
gem 'haml-rails'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'

# authentication
gem 'omniauth'
gem 'omniauth-ravelry'

# debugging
gem 'quiet_assets'

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'  
end
